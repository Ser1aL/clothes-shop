.selection_wrapper
  .pop_up_style_choice_sub_category
    .functional_container_brands
      .functional_block_brands
        .functional_block_brands_header
          .functional_block_brands_header_left_top
          .functional_block_brands_header_right_top
        .functional_block_brands_body
          .brand_watch_block
            %a.brand_watch{:href => "/#cat/#{params[:brand]}/#{params[:category]}//#{params[:gender]}"}
              %span.brand_name ВСЕ ПОДКАТЕГОРИИ
              %span.brand_quantity
                = @sub_category_total_counts
          .delimiter
          - @sub_category_counts.each_with_index do |sub_category, index|
            %div{:class => "brand_watch_block#{index % 2 == 0 ? '1' : ''}"}
              %a.brand_changable.brand_watch{:href => "/#cat/#{params[:brand]}/#{params[:category]}/#{sub_category.sub_category_id}/#{params[:gender]}"}
                %span.brand_name
                  = sub_category.sub_category_name.upcase
                %span.brand_quantity
                  = sub_category.value
            .delimiter
          %div{:class => "brand_watch_block#{@sub_category_counts.size % 2 == 0 ? '1' : ''}"}
            %a.brand_watch{:href => "/"}
              %span.brand_name
                = t('sub_category_list')
              %span.brand_quantity
                \-
          .delimiter
        .functional_block_brands_footer
          .functional_block_brands_footer_left_bottom
          .functional_block_brands_footer_right_bottom
    %div{:style => 'clear: both'}
