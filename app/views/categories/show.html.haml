= render 'category_tip'
- cache do
  .delimiter
  .categories_wrapper
    - cache do
      .banners
        #slides
          .slides_container
            - @category.banners.each do |banner|
              %div
                %a{:href => banner.url}
                  = image_tag banner.image_attachments[0].image.url(:original)

      .categories_panel
        .delimiter
        .category_block
          .category_header
            .category_name
              = link_to "#{@countings.first.category_name}", category_path(@countings.first.category_id)
            .category_count
              = "(#{@countings.map(&:value).sum})"
          .category_content
            - @countings.each do |counting|
              %div
                .sub_category_name
                  = link_to "#{counting.sub_category_name}", "/#cat//#{@countings.first.category_id}/#{counting.sub_category_id}/"
                .sub_category_count
                  = "(#{counting.value})"
              .delimiter