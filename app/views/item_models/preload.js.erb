<% 
  rendered_content = escape_javascript(render :partial => 'category_tip')
  if !@item_models.empty?
    rendered_content += escape_javascript(render :partial => 'product', :collection => @item_models)
    rendered_content += escape_javascript(paginate(@item_models, :window => 6)) if !@disable_pages_list
  else
    rendered_content += escape_javascript(render :partial => 'products_not_found')
  end
%>
$('#ajax_content').html("<%= rendered_content %>");
prepare_paginated_links('cat');

$.history.load('cat/<%= "#{params[:brand]}/#{params[:category]}/#{params[:sub_category]}/#{params[:color]}" %><%= params[:page] ? "/#{params[:page]}" : '' %>');
set_default_navigation();

<% if params[:brand] %>
  activate_navigation_button('brand');
  <% @brand_name = Brand.find(params[:brand]).name %>
  $('.navigation_buttons #brand .button_mid').html('<%= @brand_name %>');
<% end %>
<% if params[:category] %>
    activate_navigation_button('category');
    <% @category_name = Category.find(params[:category]).name %>
    $('.navigation_buttons #category .button_mid').html('<%= @category_name %>');
<% end %>
<% if params[:sub_category] %>
  activate_navigation_button('sub_category');
  <% @style_name = SubCategory.find(params[:sub_category]).name %>
  $('.navigation_buttons #sub_category .button_mid').html('<%= @style_name %>');
<% end %>
<% if params[:color] %>
    activate_navigation_button('color');
    <% @mechanism_name = Color.find(params[:color]).name %>
    $('.navigation_buttons #color .button_mid').html('<%= @mechanism_name %>');
<% end %>
jQuery('html, body').animate( { scrollTop: 0 }, 'slow' );

<% 
  classification = render :partial => '/layouts/partials/brands' 
  classification += render :partial => '/layouts/partials/categories'
  classification += render :partial => '/layouts/partials/sub_categories'
  classification += render :partial => '/layouts/partials/colors'
%>

$('#selection_top_wrapper').html('<%= escape_javascript(classification) %>');
activate_selection_popups();
$('.pop_up_style_choice_brand').hide();
$('.pop_up_style_choice_category').hide();
$('.pop_up_style_choice_sub_category').hide();
$('.pop_up_style_choice_color').hide();

$('#loader').hide();
