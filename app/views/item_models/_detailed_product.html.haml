%span.path_link
  %span.short_link
    = t('chosen_brand')
  %span.short_link
    = link_to product.brand.name, "/#cat/#{product.brand.id}///"
  %span.short_link
    = link_to product.color.name, "/#cat/#{product.brand.id}///#{product.color.id}"
  %span.short_link
    = link_to product.sub_category.name, "/#cat/#{product.brand.id}//#{product.sub_category.id}/#{product.color.id}"
  %span.short_link
    = link_to product.category.name, "/#cat/#{product.brand.id}/#{product.category.id}/#{product.sub_category.id}/#{product.color.id}"
  %span.short_link.no_arrows
    = product.product_name
.separator_content
.block
  .title_product
    %a.title_product-a.ajaxified_disabled_link{:href => item_model_path(product)}
      = "#{product.product_name},"
      = product.brand.name
  .product_image#clock_images
    - if product.image_attachments.empty?
      = image_tag ImageAttachment.new.image.url(:thumb), :class => 'missing'
    - else
      %a{:href => product.image_attachments[0].image.url(:original)}
        = image_tag product.image_attachments[0].image.url(:thumb), :alt => product.product_name
    - product.image_attachments.each_with_index do |image_attachment, index|
      - next if index == 0
      %a{:href => image_attachment.image.url(:original)}
  .product_description
    = t('product_description.category')
  .product_description1
    = product.category.name
  .product_description
    = t('product_description.sub_category')
  .product_description1
    = product.sub_category.name
  .product_description
    = t('product_description.color')
  .product_description1
    = product.color.name
  .grey_area
    - if product.product
      .presence_color
      .presence_note 
        = t('product_exists')
      .price 
        = t('product_description.price')
      %div
        %a.sum-a{:href => "#"}
          = number_to_currency(product.product.original_price, :unit => '')
      .price 
        = t('currency')
    - else
      .presence_color_no
      .presence_note_no
        = t('product_not_exists')
  - if product.product
    %a.button{:href => "#"}
      .button_left
      .button_mid.add_to_cart_link
        = link_to t('add_to_cart'), add_path(product.product)
      .button_right
  - else
    .navigation_buttons
      .button_idle
        .button_left_idle
        .button_mid_idle
          = t('add_to_cart')
        .button_right_idle
    %a.button{:href => "#"}
      .button_left
      .button_mid
        = t('email_when_available')
      .button_right
.block_description
  .product_description2
    = t('product_description.specials')
  .product_description3
    = t('product_description.no_specials')
  .grey_area
#comments
  .tips
    .tips_text
      = t('comments.header_tip')
  .filter_tips
    %a.arrow_down{:href => "#"}
    .filter_tips_text
      %a#comments_toggle{:href => "#"} 
        = t('comments.tip_total') 
        = "( #{product.comments.size} )" 
  .separator_content
  #comment_wrapper
    #comment_loader
    = render :partial => 'comment', :collection => @product.comments
    = form_tag new_comment_path, :remote => true, :id => 'new_comment_form' do
      = hidden_field_tag :item_model_id, product.id
      #comment_text_area
        .text_area_bg
          .text_area_left_bg
          .comment_text_area_style
            = text_area_tag :comment_body
          .text_area_right_bg
      .footer_button_send
        %a.submit_comment.button{:href => "#"}
          .button_left
          .button_mid
            = t('submit')
          .button_right
.delimiter
