- content_for :meta_title, t('meta.articles.meta_title')
- content_for :meta_keywords, t('meta.articles.meta_keywords')
- content_for :meta_description, t('meta.articles.meta_description')
- content_for :seo_header, t('meta.articles.seo_header')

.articles
  - @articles.each do |article|
    .article_title= article.title
    .article_short_description
      = article.short_description
      .delimiter
      .more_link= link_to t('more'), article_url(article), :rel => 'canonical'
      .delimiter

.articles_pagination= paginate(@articles, :window => 6)

