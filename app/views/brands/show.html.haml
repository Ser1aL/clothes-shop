.brows_category
  .brows_lable
    .bl_style= @brand.name.html_safe
    .bl_image
  - @category_tree[:root].each do |category_name, root_child|
    %ul.main_category
      %li.mc_lable
        %a{:href => "/advanced_search/#b=#{@brand.id}&cat=#{root_child[:id]}"}= category_name
      - root_child[:tree].delete_if{ |child| child[:count].to_i <= 0 }.each do |child|
        %li.mcl_link
          %a{:href => "/advanced_search/#b=#{@brand.id}&cat=#{root_child[:id]}&sub=#{child[:id]}"}= child[:name]
.advertisement_block
  .ab_main_brands_logo
    = image_tag @brand.logo_url, :alt => @brand.name, :title => @brand.name
  .brands_image_container
    .ab_main_brands_banner
      = image_tag @brand.image_attachments[0].image_url
  .brands_description
    = @brand.description.html_safe